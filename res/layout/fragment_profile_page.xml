<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/profile_info"
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:background= "@color/text_dark"
        android:orientation="vertical" >
        
        <ImageView 
            android:id ="@+id/profile_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:src="@drawable/profile_pic" />
    
        <TextView 
            android:id ="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_icon"
            android:layout_centerHorizontal="true"
            android:textColor="@color/text_white"/>
        
    </RelativeLayout>    
    
    
    <GridView
        android:id="@+id/product_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/profile_info"
        android:numColumns="2"
        android:layout_margin="@dimen/stream_card_padding"
        android:horizontalSpacing="@dimen/stream_card_padding"
        android:verticalSpacing="@dimen/stream_card_padding" >
    </GridView>

</RelativeLayout>