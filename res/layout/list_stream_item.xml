<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_listview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/stream_card_padding"
    android:paddingRight="@dimen/stream_card_padding"
    android:paddingTop="@dimen/stream_card_padding"
    android:clickable="true"
    android:longClickable="false"
    android:orientation="vertical" >
    
    
    <com.parse.ParseImageView 
        android:id="@+id/img_item" 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:background="@color/stream_background"
        android:src="@drawable/stream_pic_product01" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp" >

        <ImageView
            android:id="@+id/img_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:layout_alignParentRight="true"
            android:src="@drawable/stream_tag_product01" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_alignLeft="@id/img_item_price"
            android:rotation="-10" >

            <TextView
                android:id="@+id/text_item_NT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_NT"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="@string/item_price"
                android:textColor="#FFFFFF"
                android:textSize="37sp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout 
        android:id="@+id/container_number_of_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:paddingLeft="@dimen/stream_eye_padding"
        android:paddingBottom="@dimen/stream_eye_padding" >
        
        <ImageView
            android:id="@+id/img_browseeye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/eye" />
        
        <TextView 
            android:id="@+id/number_browse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_browseeye"
            android:paddingLeft="5dp"
            android:textSize="@dimen/number_browse"
            android:textColor="@color/text_white"
            android:text="0" />
                    
    </RelativeLayout>
    
</RelativeLayout>
